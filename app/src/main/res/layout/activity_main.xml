<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="testDialog"
            android:visibility="gone"
            android:text="测试"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/useTDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="useTDialog"
            android:text="TDialog基本使用"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/upgradeDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="upgradeDialog"
            android:text="版本升级" />

        <Button
            android:id="@+id/tipsDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="tipsDialog"
            android:text="兑换弹窗" />

        <!--加载中-->
        <Button
            android:id="@+id/loadingDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"
            android:onClick="loadingDialog"
            android:text="加载中... (不能取消,5秒后自动隐藏)" />

        <Button
            android:id="@+id/dialogViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"
            android:onClick="dialogView"
            android:text="使用setDialogView()直接传入View" />

        <Button
            android:id="@+id/homeAdviceDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="homeBannerDialog"
            android:text="首页广告" />

        <Button
            android:id="@+id/evaluateDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="evaluateDialog"
            android:text="评价" />

        <Button
            android:id="@+id/updateHeadDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="updateHead"
            android:text="底部弹窗选择修改头像" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:onClick="updateHead"
            android:text="列表弹窗使用TListDialog"
            android:textColor="#000" />

        <Button
            android:id="@+id/listDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="listDialog"
            android:text="列表数据选择" />

        <Button
            android:id="@+id/bottomListDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="bottomListDialog"
            android:text="底部弹窗列表数据选择" />

        <Button
            android:id="@+id/shareDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="shareDialog"
            android:text="自定义-底部弹窗选择分享平台" />

    </LinearLayout>

</ScrollView>
